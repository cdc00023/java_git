public class home extends JFrame {

	private JPanel contentPane;
	private JTextField t_name;
	private JTable t_memo;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
